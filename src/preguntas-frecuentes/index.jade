extends ../_layouts/base

include ../_modules/slider/slider
include ../_modules/form/form
include ../_modules/contacto/contacto
include ../_modules/hero/hero

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.preguntas-frecuentes
        +hero('Preguntas frecuentes', '/images/preguntas.jpg', '/images/preguntas2.jpg')
        
        section.preguntas-frecuentes__content
            .preguntas-frecuentes__content__col
                .preguntas-frecuentes__content__questions
                    .preguntas-frecuentes__content__questions__container
                        .preguntas-frecuentes__content__questions__comment Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                        ul.preguntas-frecuentes__content__questions__list
                            each item in site.data.faq
                                li.preguntas-frecuentes__content__questions__faq
                                    .preguntas-frecuentes__content__questions__faq__question=item.question
                                    .preguntas-frecuentes__content__questions__faq__answer
                                        p.preguntas-frecuentes__content__questions__faq__answer__text=item.answer
            
            .preguntas-frecuentes__content__col
                .preguntas-frecuentes__content__answers
            
            .preguntas-frecuentes__content__col
                .preguntas-frecuentes__content__image
                    img(src='/images/preguntas1.jpg')

        +contacto
